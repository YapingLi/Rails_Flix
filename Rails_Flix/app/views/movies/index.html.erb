<h2><%= pluralize(@movies.size, 'Movie')%></h2>

<ul>
    <% @movies.each do |movie| %>
        <article>
            <header>
                <%= image_for(movie) %>
                <h2><%= link_to(movie.title, movie_path(movie)) %></h2>
                <h3><%= movie.cast %></h3>
            </header>
            <p>
                <%= truncate(movie.description, length:40) %>
            </p>
            <table>
                <tr>
                    <th>Released:</th>
                    <td><%= movie.released_on %></td>
                </tr>
                <tr>
                    <th>Rating:</th>
                    <td><%= movie.rating %></td>
                </tr>
                <tr>
                    <th>Total Gross:</th>
                    <td><%= format_total_gross(movie) %></td>
                </tr>   
                <tr>
                    <th>Director:</th>
                    <td><%= movie.director %></td>
                </tr>
                <tr>
                    <th>Duration:</th>
                    <td><%= movie.duration %></td>
                </tr>
            </table>
        </article>
    <% end %>
    <p><%= link_to('Add New Movie', new_movie_path)%></p>
</ul>

<%= render('footer')%>